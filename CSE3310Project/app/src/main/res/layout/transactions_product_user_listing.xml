<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/product_user_listing_cardview"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@color/UTA_ORANGE"
        android:layout_margin="10dp"
        android:clickable="true"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/product_user_listing_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adjustViewBounds="true"
                    android:background="@color/UTA_ORANGE"
                    android:contentDescription="@string/cover"
                    android:src="@drawable/blank" />

                <ImageButton
                    android:id="@+id/product_user_listing_delete_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:useMaterialThemeColors="false"
                    app:srcCompat="@android:drawable/ic_menu_delete" />

            </FrameLayout>

            <TextView
                android:id="@+id/product_user_listing_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/UTA_ORANGE"
                android:gravity="center"
                android:text="Placeholder"
                android:textColor="@color/white"
                android:textSize="36dp"
                android:textStyle="bold" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>