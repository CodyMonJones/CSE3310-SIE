<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgotPasswordActivity"
    android:background="@color/UTA_BLUE">

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.268"
        app:cardCornerRadius="25dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="185dp">

            <TextView
                android:id="@+id/Reset_Password_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="11dp"
                android:layout_marginTop="23dp"
                android:layout_marginEnd="71dp"
                android:layout_marginBottom="20dp"
                android:text="@string/Reset_Your_Password"
                android:textColor="@color/black"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/Email_Reset"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Reset_Password_TextView"
                android:textColorHint="@color/black"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:hint="Email" />

            <Button
                android:id="@+id/Submit_Password_Reset"
                android:layout_width="101dp"
                android:layout_height="49dp"
                android:layout_below="@+id/Email_Reset"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="131dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="136dp"
                android:layout_marginBottom="1dp"
                android:text="Submit"
                android:backgroundTint="@color/UTA_ORANGE"/>
        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>